{
    "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 20,
    "editor.lineHeight": 45,
    "workbench.fontAliasing": "antialiased",
    "editor.letterSpacing": 0.5,
    "files.trimTrailingWhitespace": true,
    "editor.fontWeight": "400",
    "editor.cursorBlinking": "blink",
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": false,
    "window.zoomLevel": 0,
    "workbench.startupEditor": "newUntitledFile",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "editor.suggestSelection": "first",
    "explorer.confirmDragAndDrop": false,
    "editor.wordWrap": "on",
    "editor.multiCursorModifier": "ctrlCmd",
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "terminal.integrated.fontSize": 16,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "sync.gist": "57d70cc8c733344219c16e2415ccb94d",
    "editor.tabSize": 2,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.dragAndDrop": false,
    // turn it off for JS
    "[javascript]": {
        "editor.formatOnSave": false
    },
    // Optional: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
    "prettier.disableLanguages": [
        "js"
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.configuration.checkProjectSettingsExclusions": false,
    "terminal.integrated.fontFamily": "Source code pro, Menlo, Monaco, 'Courier New', monospace",
    "workbench.tree.indent": 18,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // BELOW IS MY VIM SETTINGS
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "<tab>"
            ],
            "after": [
                "%"
            ]
        },
        {
            "before": [
                "<leader>",
                "<space>"
            ],
            "commands": [
                ":nohl",
            ]
        },
        {
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            "before": [
                "<Leader>",
                "d"
            ],
            "commands": [
                "editor.action.goToDeclaration"
            ]
        },
        {
            "before": [
                ";",
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<Leader>",
                "w"
            ],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": [
                "<C-h>",
            ],
            "commands": [
                "workbench.action.navigateLeft"
            ]
        },
        {
            "before": [
                "<C-l>",
            ],
            "commands": [
                "workbench.action.navigateRight"
            ]
        },
        {
            "before": [
                "<C-j>",
            ],
            "commands": [
                "workbench.action.navigateDown"
            ]
        },
        {
            "before": [
                "<C-k>",
            ],
            "commands": [
                "workbench.action.navigateUp"
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
        {
            "before": [
                "<tab>"
            ],
            "after": [
                "%"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                "editor.action.addSelectionToNextFindMatch"
            ]
        },
        {
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
    ],
    "vim.leader": ",",
    "vim.handleKeys": {},
    "terminal.integrated.fontWeightBold": "normal",
    "editor.overviewRulerBorder": false,
    "debug.showBreakpointsInOverviewRuler": true,
    "terminal.integrated.rendererType": "dom",
    "workbench.panel.defaultLocation": "right",
    "editor.minimap.enabled": false,
    "todo-tree.highlights.enabled": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "todo-tree.tree.showScanModeButton": false,
}
